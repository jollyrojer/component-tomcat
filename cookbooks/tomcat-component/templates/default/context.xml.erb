        debug="5" reloadable="true" crossContext="true" allowLinking="true">
<% @node[“environments”].each do |name, parameters| %>
<Environment name=“<%= name %>”
	<% parameters.each do |key, value| %>	
		<%= key %>=“<%= value %>”
	<% end %>
/>
<% end %>

<% @node[“resources”].each do |name, parameters| %>
<Resource name=“<%= name %>”
	<% parameters.each do |key, value| %>	
		<%= key %>=“<%= value %>”
	<% end %>
/>
<% end %>
/>
